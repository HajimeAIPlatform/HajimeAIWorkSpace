{
    "name": "function_call_schema",
    "description": "A generic template for JSON Schema",
    "strict": true,
    "schema": {
        "type": "object",
        "properties": {
            "actions": {
                "type": "array",
                "description": "The functions and arguments to call",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the function to call"
                        },
                        "arguments": {
                            "type": "string",
                            "description": "The arguments to pass to the function in json string, escape double quote by slash"
                        }
                    },
                    "required": [
                        "name",
                        "arguments"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "required": [
            "actions"
        ],
        "additionalProperties": false
    }
}